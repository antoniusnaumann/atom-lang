main(n Int) {
    fib(n).print()
}

/// Calculates the nth fibonacci number
fib(nth Int) Int {
    match(nth) {
        0 -> 0
        1 -> 1
        _ -> fib(nth - 1) + fib(nth - 2)
    }
}

"First seven fibonacci numbers match" {
    assert(fib(0) == 0)
    assert(fib(1) == 1)
    assert(fib(2) == 1)
    assert(fib(3) == 2)
    assert(fib(4) == 3)
    assert(fib(5) == 5)
    assert(fib(6) == 8)
}
